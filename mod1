library(shiny)
library(lpSolve)
library(ggplot2)
library(reshape2)

ui <- fluidPage(
  titlePanel("PlaneaciÃ³n Agregada - OptimizaciÃ³n de Costos"),
  sidebarLayout(
    sidebarPanel(
      h4("âš™ ParÃ¡metros de Entrada"),
      numericInput("cap_prod", "Capacidad mÃ¡xima de producciÃ³n interna:", 300),
      numericInput("prod_unit_cost", "Costo por unidad producida internamente:", 18),
      numericInput("inv_cost", "Costo de inventario por unidad:", 1),
      numericInput("hire_cost", "Costo por contratar empleado:", 400),
      numericInput("fire_cost", "Costo por despedir empleado:", 300),
      numericInput("prod_per_worker", "ProducciÃ³n mensual por empleado:", 20),
      numericInput("initial_workers", "NÃºmero de empleados iniciales:", 6),
      numericInput("cost_prov1", "Costo por unidad del proveedor 1:", 25),
      numericInput("cost_prov2", "Costo por unidad del proveedor 2:", 27),
      actionButton("run", "Calcular planificaciÃ³n")
    ),
    mainPanel(
      h4("âœ… SoluciÃ³n Ã“ptima:"),
      tableOutput("result_table"),
      h4("ðŸ‘·â€â™‚ Empleados, ContrataciÃ³n y Despido"),
      plotOutput("emp_plot"),
      h4("ðŸ­ ProducciÃ³n Interna y Compras Externas"),
      plotOutput("prod_plot")
    )
  )
)

server <- function(input, output) {
  observeEvent(input$run, {
    meses <- 4
    demanda <- c(200, 250, 230, 270)
    n_vars <- meses * 7
    
    # Variables: Prod, Inv, Prov1, Prov2, Emp, Hire, Fire
    f.obj <- rep(0, n_vars)
    for (t in 1:meses) {
      idx <- (t - 1) * 7
      f.obj[idx + 1] <- input$prod_unit_cost
      f.obj[idx + 2] <- input$inv_cost
      f.obj[idx + 3] <- input$cost_prov1
      f.obj[idx + 4] <- input$cost_prov2
      f.obj[idx + 6] <- input$hire_cost
      f.obj[idx + 7] <- input$fire_cost
    }
    
    rows <- meses * 3
    f.con <- matrix(0, nrow = rows, ncol = n_vars)
    f.dir <- rep("=", rows)
    f.rhs <- rep(0, rows)
    row <- 1
    
    for (t in 1:meses) {
      idx <- (t - 1) * 7
      
      # 1. Cumplimiento de la demanda
      f.con[row, idx + 1] <- 1  # ProducciÃ³n
      f.con[row, idx + 2] <- -1 # Inventario actual
      f.con[row, idx + 3] <- 1  # Prov1
      f.con[row, idx + 4] <- 1  # Prov2
      if (t > 1) f.con[row, idx - 5 + 2] <- 1  # Inventario del mes anterior
      f.rhs[row] <- demanda[t]
      row <- row + 1
      
      # 2. LÃ­mite de producciÃ³n interna
      f.con[row, idx + 1] <- 1
      f.con[row, idx + 5] <- -input$prod_per_worker
      f.dir[row] <- "<="
      f.rhs[row] <- 0
      row <- row + 1
      
      # 3. EvoluciÃ³n del personal
      if (t == 1) {
        f.con[row, idx + 5] <- 1
        f.con[row, idx + 6] <- -1
        f.con[row, idx + 7] <- 1
        f.rhs[row] <- input$initial_workers
      } else {
        f.con[row, idx + 5] <- 1
        f.con[row, idx + 6] <- -1
        f.con[row, idx + 7] <- 1
        f.con[row, idx - 5 + 5] <- -1
        f.rhs[row] <- 0
      }
      row <- row + 1
    }
    
    # Resolver el modelo
    res <- lp("min", f.obj, f.con, f.dir, f.rhs)
    
    if (res$status == 0) {
      sol <- matrix(res$solution, nrow = meses, byrow = TRUE)
      colnames(sol) <- c("ProducciÃ³n", "Inventario", "Prov1", "Prov2", "Empleados", "Contratados", "Despedidos")
      df <- as.data.frame(sol)
      df$Mes <- paste0("Mes ", 1:meses)
      
      output$result_table <- renderTable({
        df[, c("Mes", colnames(sol))]
      }, digits = 0)
      
      # GrÃ¡fica de empleados, contrataciones y despidos
      df_emp <- melt(df[, c("Mes", "Empleados", "Contratados", "Despedidos")], id.vars = "Mes")
      output$emp_plot <- renderPlot({
        ggplot(df_emp, aes(x = Mes, y = value, color = variable, group = variable)) +
          geom_line(size = 1.2) +
          geom_point(size = 3) +
          labs(x = "Mes", y = "Cantidad", color = "Variable") +
          theme_minimal()
      })
      
      # GrÃ¡fica de producciÃ³n y compras externas
      df_prod <- melt(df[, c("Mes", "ProducciÃ³n", "Prov1", "Prov2")], id.vars = "Mes")
      output$prod_plot <- renderPlot({
        ggplot(df_prod, aes(x = Mes, y = value, fill = variable)) +
          geom_bar(stat = "identity", position = "dodge") +
          labs(x = "Mes", y = "Unidades", fill = "Origen") +
          theme_minimal()
      })
    } else {
      output$result_table <- renderTable({
        data.frame(Mensaje = "No se encontrÃ³ soluciÃ³n factible.")
      })
      output$emp_plot <- renderPlot(NULL)
      output$prod_plot <- renderPlot(NULL)
    }
  })
}

shinyApp(ui, server)
